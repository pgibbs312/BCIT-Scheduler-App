<body>

    <!-- Nav bar -->
    <div class="nav">
        <img src="BCIT_logo.png" id="logo">
        <p class="nav-content">BCIT Room Booking System</p>
        <p class="nav-content">Today's Date:</p>
        <div class="nav-content">
            <script> document.write(new Date().toDateString()); </script>
        </div>
        <button class="btns"> Log out</button>

    </div>
    <!-- End of Nav bar -->


    <div class="page-grid">

        <!-- Change the calendar with today/Week/Month buttons -->
        <div class="calendar1">
            <button class="viewButton" id="todayBut">Today</button>
            <button class="viewButton" id="weekBut">Week</button>
            <button class="viewButton" id="monthBut">Month</button>
        </div>
        <!-- End of 'Change the calendar with today/Week/Month buttons' -->


        <!-- Calendar -->
        <div class="calendar2">

            <div class="container">
                <div class="times">
                    <div class="timeHeader"><b>Times</b></div>
                    <% for (i in times) { %>
                        <div class="timeTwo">
                            <%=times[i].time%>
                        </div>
                        <% } %>
                </div>
            







            </div>



        </div>
        <!-- End of Calendar -->


